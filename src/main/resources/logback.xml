<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([%1.-1level]) %20.20logger{20}: %msg%n</pattern>
        </encoder>
    </appender>
    <root level="${log.root:-debug}">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="com.novocode.mdoc.config.Global"                    level="info" />
    <logger name="com.novocode.mdoc.PageParser"                       level="info" />
    <logger name="com.novocode.mdoc.TocParser"                        level="warn" />
    <logger name="com.novocode.mdoc.commonmark.SpecialImageProcessor" level="debug" />
    <logger name="com.novocode.mdoc.commonmark.SpecialLinkProcessor"  level="info" />
    <logger name="com.novocode.mdoc.commonmark.ExpandTocProcessor"    level="info" />
    <logger name="com.novocode.mdoc.theme.default.html.Theme"         level="debug" />
    <logger name="com.novocode.mdoc.js.Modules"                       level="info" />
    <logger name="com.novocode.mdoc.highlight.HighlightJSHighlighter" level="info" />
</configuration>
